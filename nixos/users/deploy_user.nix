{
  users.users."deploy_user" = {
    isNormalUser = true;
    extraGroups = [ "wheel" ];
    openssh.authorizedKeys.keys = [
      "ssh-rsa  github"
    ];
  };

  security.sudo = {
    extraRules = [
      {
        users = [ "deploy_user" ];
        commands = [
          {
            command = "ALL";
            options = [ "NOPASSWD" ];
          }
        ];
      }
    ];
  };
}
